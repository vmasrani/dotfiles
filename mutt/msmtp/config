# vim: filetype=conf
# msmtp configuration for sending mail via Gmail SMTP

defaults
auth           on
tls            on
tls_trust_file /etc/ssl/cert.pem
logfile        ~/.config/msmtp/msmtp.log

# Gmail account
# Password is read from ~/.mutt_secrets
# NOTE: If you use 2FA, you need to generate an app password:
# https://support.google.com/accounts/answer/185833
account gmail
host smtp.gmail.com
port 587
from vadmas@gmail.com
user vadmas@gmail.com
passwordeval "grep 'my_gmail_pass' ~/.mutt_secrets | sed 's/.*\"\\(.*\\)\"/\\1/'"

# Set gmail as default
account default : gmail
