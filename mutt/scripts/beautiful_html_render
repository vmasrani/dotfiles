#!/usr/bin/env zsh
# Render HTML as markdown and display with glow
# Supports syntax highlighting for code blocks
# Requires: html2text, glow

# Process HTML: convert to markdown-like text
html2text "$1" > /tmp/mutt.md 2>/dev/null

# Render with glow, stripping problematic escape codes
CLICOLOR_FORCE=1 glow -s dark /tmp/mutt.md 2>/dev/null | sed 's/\x1b\[[6-9;]*m//g'
